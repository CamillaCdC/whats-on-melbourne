<h1>Event Organiser Log In</h1>

<p>New organiser? Create new account <a href="/organiser/new">here.</a></p>

<div><%= @error %></div>

<form action="/organiser/login" method="post">

    <section>
        <label for="organiserName">Organisation name: </label>
        <input type="text" name="organiserName">
    </section>

    <section>
        <label for="password">Password: </label>
        <input type="password" name="password">
    </section>

    <button>Log in</button>
</form>