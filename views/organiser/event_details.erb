<h1>Organiser Event Details</h1>

    <img src="<%= @event['image_url'] %>" alt="">
    <p><%= @event['name'] %></p>

    <p>Number of attendees: <%= @num_attendees %></p>

    <p>Date: <%= @event['date'] %></p>

    <p>Questions:</p>
    <% @questions.each do |question|  %>
    <p><%= question['question'] %></p>

        <% if question['answer'] == nil%>
            <p><a href="/question/<%= question['id'] %>/answer">write answer to question</a></p>
            
        <% else %>
            <p><%= question['answer'] %></p>
        <% end %>

    <% end %>

    <div class="buttons">
        <a href="/event/<%= @event['id'] %>/edit"  class="editBtn">
            <span>edit</span>
        </a>
        <form action="/event/<%= @event['id'] %>" method="post" class="deleteForm">
            <input type="hidden" name="_method" value="delete">
            <button class="deleteBtn">delete</button>
        </form>
    </div>
