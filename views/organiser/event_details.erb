<h1><%= @event['name'] %> Details</h1>

<div class="eventDetails">

    <img class="detailsImage" src="<%= @event['image_url'] %>" alt="">

    <div class="info">
        <p>Number of attendees: <%= @num_attendees %></p>

        <p>Date: <%= @event['date'] %></p>
        
        <p>Start time: <%= Time.parse(@event['start_time']).strftime("%I:%M %p") %></p>

        <p>End time: <%= Time.parse(@event['end_time']).strftime("%I:%M %p") %></p>

        <p>Questions:</p>
        <% @questions.each do |question|  %>
            <p><%= question['question'] %></p>
            
            <% if question['answer'] == nil%>
                <p><a href="/question/<%= question['id'] %>/answer">write answer to question</a></p>
                
            <% else %>
                <p><%= question['answer'] %></p>
            <% end %>

        <% end %>

        <div class="buttons">
            <a href="/event/<%= @event['id'] %>/edit"  class="editBtn">
                <span>edit</span>
            </a>
            <form action="/event/<%= @event['id'] %>" method="post" class="deleteForm">
                <input type="hidden" name="_method" value="delete">
                <button class="deleteBtn">delete</button>
            </form>
        </div>

    </div>

</div>
